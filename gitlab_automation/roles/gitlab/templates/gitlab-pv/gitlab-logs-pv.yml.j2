---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: gitlab-logs-pv
  namespace: "{{ ns_name }}"
  labels:
    name: "logs-{{ ns_name }}"
    app: gitlab
spec:
  storageClassName: "{{ storage_class_name }}"
  capacity:
    storage: 3Gi
  volumeMode: Filesystem
  accessModes:
    - ReadWriteMany
  hostPath:
    path: "{{ gitlab_path[3] }}"
